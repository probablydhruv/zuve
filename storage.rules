rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own images
    match /users/{userId}/projects/{projectId}/images/{imageId} {
      // Allow read if authenticated and is the owner
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if authenticated and is the owner
      // Max file size: 10MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;
    }

    // Signature Styles: users/{uid}/projects/{projectId}/signatureStyles/{signatureId}
    match /users/{userId}/projects/{projectId}/signatureStyles/{signatureId} {
      // Allow read if authenticated and is the owner
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if authenticated and is the owner, max 10MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


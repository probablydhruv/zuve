rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ==================== User Profile Rules ====================
    // User document - tier is stored directly on the user document
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can create their own document (only with 'free' tier if tier is set)
      allow create: if isOwner(userId) 
                    && (!request.resource.data.keys().hasAny(['tier']) || request.resource.data.tier == 'free')
                    && request.resource.data.uid == userId;
      
      // Users can update their own document EXCEPT tier and subscription fields
      // Tier and subscription can only be updated via Cloud Functions (server-side)
      allow update: if isOwner(userId)
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['tier', 'subscriptionId', 'subscriptionStatus']);
    }
    
    // ==================== Project Rules ====================
    match /users/{userId}/projects/{projectId} {
      // Users can read/write their own projects
      allow read, write: if isOwner(userId);
      
      // Canvas data subcollection
      match /canvas/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ==================== Default Deny ====================
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

